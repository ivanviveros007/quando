{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@constants": ["./constants"],
      "@assets/*": ["./assets/*"],
      "@helpers": ["./helpers"],
      "@hooks": ["./hooks"],
      "@theme": ["./theme"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}

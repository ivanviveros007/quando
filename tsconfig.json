{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@constants": ["src/constants"],
      "@assets/*": ["./assets/*"],
      "@helpers": ["src/helpers"],
      "@hooks": ["src/hooks"],
      "@theme": ["src/theme"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
